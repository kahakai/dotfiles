{
  "theme": {
    "mode": "system",
    "light": "Zed Legacy: Rosé Pine Dawn",
    "dark": "Zed Legacy: Rosé Pine Moon"
  },
  "base_keymap": "VSCode",
  "buffer_font_family": "JetBrains Mono",
  "ui_font_size": 14,
  "buffer_font_size": 12,
  "vim_mode": true,
  "relative_line_numbers": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": true
  },
  "cursor_blink": false,
  "scrollbar": {
    "show": "never"
  },
  "vertical_scroll_margin": 0,
  "tab_bar": {
    "show": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "preferred_line_length": 100,
  "soft_wrap": "preferred_line_length",
  "formatter": "language_server",
  "tab_size": 2,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "project_panel": {
    "button": false,
    "auto_fold_dirs": false,
    "scrollbar": {
      "show": "never"
    }
  },
  "outline_panel": {
    "button": false
  },
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": true,
    "line_height": "standard",
    "toolbar": {
      "title": true
    },
    "working_directory": "current_project_directory",
    "button": false
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-thinking-latest"
    },
    "version": "2",
    "button": false
  },
  "telemetry": {
    "diagnostics": true
  },
  "auto_install_extensions": {
    "zed-legacy-themes": true,
    "dart": true,
    "elixir": true,
    "emmet": true
  },
  "languages": {
    "Elixir": {
      "language_servers": [
        "elixir-ls",
        "tailwindcss-language-server",
        "emmet-language-server"
      ]
    },
    "HEEX": {
      "language_servers": [
        "elixir-ls",
        "tailwindcss-language-server",
        "emmet-language-server"
      ]
    },
    "YAML": {
      "formatter": "language_server"
    }
  },
  "lsp": {
    "dart": {
      "settings": {
        "lineLength": 100
      }
    },
    "elixir-ls": {
      "settings": {
        "dialyzerEnabled": false
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "format": {
            "singleQuote": true
          }
        }
      }
    }
  }
}
