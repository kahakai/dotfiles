{
  "base_keymap": "VSCode",
  "vim_mode": true,
  "relative_line_numbers": true,
  "buffer_font_family": "JetBrains Mono",
  "ui_font_size": 14,
  "buffer_font_size": 12,
  "auto_install_extensions": {
    "zed-legacy-themes": true,
    "dart": true,
    "elixir": true,
    "emmet": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "languages": {
    "Elixir": {
      "language_servers": [
        "elixir-ls",
        "tailwindcss-language-server",
        "emmet-language-server"
      ]
    },
    "HEEX": {
      "language_servers": [
        "elixir-ls",
        "tailwindcss-language-server",
        "emmet-language-server"
      ]
    }
  },
  "lsp": {
    "dart": {
      "settings": {
        "lineLength": 100
      }
    },
    "elixir-ls": {
      "settings": {
        "dialyzerEnabled": false
      }
    }
  },
  "theme": {
    "mode": "system",
    "light": "Zed Legacy: Rosé Pine Dawn",
    "dark": "Zed Legacy: Rosé Pine Moon"
  },
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "telemetry": {
    "diagnostics": true
  }
}
